{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": ["*.js", "*.vue", "*.ts", "*.tsx", "*.css", "*.scss", "*.json"],
      "options": {
        "bracketSpacing": true,
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false,
        "importOrder": [
          "^@core/(.*)$",
          "^@server/(.*)$",
          "^@ui/(.*)$",
          "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "printWidth": 120
      }
    }
  ]
}
